
@model Slider
@{
    ViewData["Title"] = "Edit";
}


<div class="container-fluid" style="margin-top:50px">
    <h1>Edit</h1>
    <form method="post" enctype="multipart/form-data">
        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="Icon">Icon</label>
                <input asp-for="Icon" class="form-control">
                <span class="text-danger" asp-validation-for="Icon"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="IconTitle">IconTitle</label>
                <input asp-for="IconTitle" class="form-control">
                <span class="text-danger" asp-validation-for="IconTitle"></span>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="Title1">Title1</label>
                <input asp-for="Title1" class="form-control">
                <span class="text-danger" asp-validation-for="Title1"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="Title2">Title2</label>
                <input asp-for="Title2" class="form-control">
                <span class="text-danger" asp-validation-for="Title2"></span>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="Subtitle">Subtitle</label>
                <input asp-for="Subtitle" class="form-control">
                <span class="text-danger" asp-validation-for="Subtitle"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="RedirectUrlText">UrlText</label>
                <input asp-for="RedirectUrlText" class="form-control">
                <span class="text-danger" asp-validation-for="RedirectUrlText"></span>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-2">
                <label asp-for="Order">Order</label>
                <input asp-for="Order" class="form-control">
                <span class="text-danger" asp-validation-for="Order"></span>
            </div>
            <div class="form-group col-md-10">
                <label asp-for="RedirectUrl">RedirectUrl</label>
                <input asp-for="RedirectUrl" class="form-control">
                <span class="text-danger" asp-validation-for="RedirectUrl"></span>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-4">
                <label asp-for="ImageFile">ImageFile</label>
                <input asp-for="ImageFile" class="form-control">
                <span class="text-danger" asp-validation-for="ImageFile"></span>
            </div>
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-primary">Edit</button>
        </div>

    </form>

</div>


