@model Team
@{
    ViewData["Title"] = "Edit";
}



<div class="container-fluid">
    <h1>Edit</h1>
    <form method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label asp-for="Name">FullName</label>
            <input asp-for="Name" class="form-control" placeholder="FullName">
            <span class="text-danger" asp-validation-for="Name"></span>
        </div>
        <div class="form-group">
            <label asp-for="ImageFile">ImageFile</label>
            <input asp-for="ImageFile" class="form-control" placeholder="ImageFile">
            <span class="text-danger" asp-validation-for="ImageFile"></span>
        </div>

        <div class="img-box" style="display: inline-block; position: relative;">
            <input type="hidden" name="Image" value="@Model.Image" />
            <img style="max-width:300px" src="~/uploads/team/@Model.Image" alt="Alternate Text" />
            <span class="remove-img-box" style="position: absolute; top: -10px; right: -5px; cursor:pointer">
                <i class="fa fa-times" style="color: red; font-size: 24px;"></i>
            </span>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Edit</button>
        </div>
    </form>
</div>

