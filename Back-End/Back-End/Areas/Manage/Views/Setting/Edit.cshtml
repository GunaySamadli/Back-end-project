@model Setting
@{
    ViewData["Title"] = "Edit";
}

<div class="container-fluid"  style="margin-top:100px">
    <form method="post" enctype="multipart/form-data">
        <div class="form-row">
            <div class="form-group col-md-3">
                <label asp-for="Phone">Phone</label>
                <input asp-for="Phone" class="form-control">
                <span class="text-danger" asp-validation-for="Phone"></span>
            </div>
            <div class="form-group col-md-3">
                <label asp-for="Adress">Adress</label>
                <input asp-for="Adress" class="form-control">
                <span class="text-danger" asp-validation-for="Adress"></span>
            </div>
            <div class="form-group col-md-3">
                <label asp-for="ContactMail">ContactMail</label>
                <input asp-for="ContactMail" class="form-control">
                <span class="text-danger" asp-validation-for="ContactMail"></span>
            </div>
            <div class="form-group col-md-3">
                <label asp-for="SupportMail">SupportMail</label>
                <input asp-for="SupportMail" class="form-control">
                <span class="text-danger" asp-validation-for="SupportMail"></span>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-3">
                <label asp-for="FooterDesc">FooterDesc</label>
                <input asp-for="FooterDesc" class="form-control">
                <span class="text-danger" asp-validation-for="FooterDesc"></span>
            </div>
            <div class="form-group col-md-3">
                <label asp-for="AboutTitle">AboutTitle</label>
                <input asp-for="AboutTitle" class="form-control">
                <span class="text-danger" asp-validation-for="AboutTitle"></span>
            </div>
            <div class="form-group col-md-3">
                <label asp-for="AboutDesc">AboutDesc</label>
                <input asp-for="AboutDesc" class="form-control">
                <span class="text-danger" asp-validation-for="AboutDesc"></span>
            </div>
            <div class="form-group col-md-3">
                <label asp-for="AboutSubDesc">AboutSubDesc</label>
                <input asp-for="AboutSubDesc" class="form-control">
                <span class="text-danger" asp-validation-for="AboutSubDesc"></span>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-3">
                <label asp-for="FbUrl">FacebookUrl</label>
                <input asp-for="FbUrl" class="form-control">
                <span class="text-danger" asp-validation-for="FbUrl"></span>
            </div>
            <div class="form-group col-md-3">
                <label asp-for="TwitterUrl">TwitterUrl</label>
                <input asp-for="TwitterUrl" class="form-control">
                <span class="text-danger" asp-validation-for="TwitterUrl"></span>
            </div>
            <div class="form-group col-md-3">
                <label asp-for="InstaUrl">InstagramUrl</label>
                <input asp-for="InstaUrl" class="form-control" >
                <span class="text-danger" asp-validation-for="InstaUrl"></span>
            </div>
            <div class="form-group col-md-3">
                <label asp-for="DribbleUrl">DribbleUrl</label>
                <input asp-for="DribbleUrl" class="form-control">
                <span class="text-danger" asp-validation-for="DribbleUrl"></span>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-4">
                <label asp-for="AboutUrl">AboutUrl</label>
                <input asp-for="AboutUrl" class="form-control">
                <span class="text-danger" asp-validation-for="AboutUrl"></span>
            </div>
            <div class="form-group col-md-4">
                <label asp-for="AboutUrlText">AboutUrlText</label>
                <input asp-for="AboutUrlText" class="form-control">
                <span class="text-danger" asp-validation-for="AboutUrlText"></span>
            </div>
            <div class="form-group col-md-4">
                <label asp-for="CopyRight">CopyRight</label>
                <input asp-for="CopyRight" class="form-control">
                <span class="text-danger" asp-validation-for="CopyRight"></span>
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="AboutImgFile">AboutImageFile</label>
                <input asp-for="AboutImgFile" class="form-control">
                <span class="text-danger" asp-validation-for="AboutImgFile"></span>
            </div>
            <div class="img-box">
                <img src="~/uploads/setting/@Model.AboutImage" style="max-width:300px" />
                <input type="hidden" asp-for="AboutImage" value="@Model.AboutImage" />
            </div>
            <div class="form-group col-md-6">
                <label asp-for="ServiceImgFile">ServiceImageFile</label>
                <input asp-for="ServiceImgFile" class="form-control">
                <span class="text-danger" asp-validation-for="ServiceImgFile"></span>
            </div>
            <div class="img-box">
                <img src="~/uploads/setting/@Model.ServiceImage" style="max-width:300px" />
                <input type="hidden" asp-for="ServiceImage" value="@Model.ServiceImage" />
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="HeaderImgFile">HeaderImageFile</label>
                <input asp-for="HeaderImgFile" class="form-control" >
                <span class="text-danger" asp-validation-for="HeaderImgFile"></span>
            </div>
            <div class="img-box">
                <img src="~/uploads/setting/@Model.HeaderLogo" style="max-width:300px" />
                <input type="hidden" asp-for="HeaderLogo" />x
                <span class="text-danger" asp-validation-for="HeaderLogo"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="FooterImgFile">FooterImageFile</label>
                <input asp-for="FooterImgFile" class="form-control">
                <span class="text-danger" asp-validation-for="FooterImgFile"></span>
            </div>
            <div class="img-box">
                <img src="~/uploads/setting/@Model.FooterLogo" style="max-width:300px" />
                <input type="hidden" asp-for="FooterLogo" value="@Model.FooterLogo" />
                <span class="text-danger" asp-validation-for="FooterLogo"></span>
            </div>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="VideoFile">HomePageVideoImageFile</label>
            <input asp-for="VideoFile" class="form-control">
            <span class="text-danger" asp-validation-for="VideoFile"></span>
        </div>
        <div class="img-box">
            <img src="~/uploads/setting/@Model.HomePageImg" style="max-width:300px" />
            <input type="hidden" asp-for="HomePageImg" value="@Model.HomePageImg" />
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Edit</button>
        </div>
    </form>
</div>