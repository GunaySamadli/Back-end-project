

@model List<FavItemViewModel>

@{
    Layout = null;
    double totalCount = 0;
    foreach (var item in Model)
    {
        totalCount += item.Price * item.Count;
    }
}


<div class="ltn__utilize-menu-inner ltn__scrollbar">
    <div class="ltn__utilize-menu-head">
        <span class="ltn__utilize-menu-title">Favory</span>
        <button class="ltn__utilize-close">×</button>
    </div>
    <div class="mini-cart-product-area ltn__scrollbar">
        @foreach (var item in Model)
        {
            <div class="mini-cart-item clearfix">
                <div class="mini-cart-img">
                    <a href="#"><img src="~/assets/img/product/@item.Image" alt="Image"></a>
                    <a class="delete" data-id="@item.ProductId"  asp-action="deletefromfav" asp-controller="product" asp-route-id="@item.ProductId" >
                        <span class="mini-cart-item-delete"><i class="icon-cancel"></i></span>
                    </a>
                </div>
                <div class="mini-cart-info">
                    <h6><a href="#">@item.Price</a></h6>
                    <span class="mini-cart-quantity"> $@item.Price</span>
                </div>
            </div>

        }
    </div>
    <div class="mini-cart-footer">
        <div class="mini-cart-sub-total">
            <h5>Subtotal: <span>$@totalCount</span></h5>
        </div>
    </div>

</div>
